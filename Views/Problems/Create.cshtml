@model StudyWebApp.Models.Problem
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Problem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProblemQuestion" class="control-label"></label>
                <input asp-for="ProblemQuestion" class="form-control" />
                <span asp-validation-for="ProblemQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProblemAnswer" class="control-label"></label>
                <input asp-for="ProblemAnswer" class="form-control" />
                <span asp-validation-for="ProblemAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsersName" class="control-label"></label>
                <input asp-for="UsersName" value="@User.Identity.Name" class="form-control" readonly/>
                <span asp-validation-for="UsersName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
