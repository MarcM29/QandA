@model IEnumerable<StudyWebApp.Models.Problem>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Practice Problems</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProblemQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsersName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemQuestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsersName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">See answer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
